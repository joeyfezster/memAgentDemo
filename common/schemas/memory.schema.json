{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memory",
  "description": "Schema for memory objects in the Memory Agent system",
  "type": "object",
  "definitions": {
    "MemoryBase": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The content of the memory"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["content"]
    },
    "Memory": {
      "allOf": [
        { "$ref": "#/definitions/MemoryBase" },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for the memory"
            },
            "created_at": {
              "type": "string",
              "format": "date-time",
              "description": "Creation timestamp"
            },
            "updated_at": {
              "type": "string",
              "format": "date-time",
              "description": "Last update timestamp"
            }
          },
          "required": ["id", "created_at", "updated_at"]
        }
      ]
    }
  }
}
